<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    tools:context=".UserDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Health Metrics Section -->
            <TextView
                android:id="@+id/tv_bmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI: "
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_bmi_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI Category: "
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_daily_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Calories: "
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_nutrition_needs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutrition Needs: "
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <!-- Remove Calculate Health Metrics Button -->
            <Button
                android:id="@+id/btn_calculate_health_metrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate Health Metrics"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Full Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your full name"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="16dp"/>


            <!-- Age -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/et_age"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your age"
                android:inputType="number"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="16dp"/>


            <!-- Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/radio_group_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">
                <RadioButton
                    android:id="@+id/gender_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:textColor="@color/text_primary"/>
                <RadioButton
                    android:id="@+id/gender_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female"
                    android:textColor="@color/text_primary"/>
                <RadioButton
                    android:id="@+id/gender_other"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Other"
                    android:textColor="@color/text_primary"/>
            </RadioGroup>

            <!-- Activity Level (Hidden Initially) -->
            <TextView
                android:id="@+id/activity_level_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Level"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"
                android:visibility="gone"/>

            <Spinner
                android:id="@+id/activity_level"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <!-- Height & Weight (Side by Side) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height (cm)"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp"/>
                    <EditText
                        android:id="@+id/et_height"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="e.g., 170"
                        android:inputType="numberDecimal"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight (kg)"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp"/>
                    <EditText
                        android:id="@+id/et_weight"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="e.g., 70"
                        android:inputType="numberDecimal"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_secondary"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Dietary Preferences -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dietary Preferences"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/et_dietary_preferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter preferences (comma-separated)"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="16dp"/>


            <!-- Allergies -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allergies"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/et_allergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter allergies (comma-separated)"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textColorHint="@color/text_secondary"
                android:layout_marginBottom="16dp"/>


            <!-- Pregnancy Status (Hidden by Default) -->
            <RadioGroup
                android:id="@+id/pregnancy_status_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone">
                <RadioButton
                    android:id="@+id/pregnant_yes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pregnant"
                    android:textColor="@color/text_primary"/>
                <RadioButton
                    android:id="@+id/pregnant_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Not Pregnant"
                    android:textColor="@color/text_primary"/>
            </RadioGroup>

            <!-- Save & Continue Button -->
            <Button
                android:id="@+id/btn_save_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate BMI and Continue"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <!-- Logout Button -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginBottom="24dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <!-- Add Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>
                
        </LinearLayout>
    </ScrollView>
</LinearLayout>